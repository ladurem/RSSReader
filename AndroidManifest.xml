<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rss.rssreader"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.rss.rssreader.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.rss.rssreader.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="com.rss.rssreader.StreamActivity"
            android:label="@string/title_activity_stream" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rss.rssreader.DisplayArticle"
            android:label="@string/title_activity_display_article" >
        </activity>
        <activity
            android:name="com.rss.rssreader.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.rss.rssreader.AddFlux"
            android:label="@string/title_activity_add_flux"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.rss.rssreader.AddFluxActivity"
            android:label="@string/title_activity_add_flux" >
        </activity>
    </application>

</manifest>